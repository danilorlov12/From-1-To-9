<resources xmlns:tools="http://schemas.android.com/tools" tools:ignore="SpUsage">
    <style name="Theme.OneToNineGame" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/gold</item>
<!--        <item name="colorPrimaryVariant">@color/black</item>-->
<!--        <item name="colorOnPrimary">@color/white</item>-->
<!--        <item name="colorSecondary">@color/teal_200</item>-->
<!--        <item name="colorSecondaryVariant">@color/teal_700</item>-->
<!--        <item name="colorOnSecondary">@color/black</item>-->

        <item name="android:statusBarColor">@color/primary</item>
        <item name="android:navigationBarColor">@color/primary</item>

        <item name="android:windowBackground">@color/primary</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="SplashTheme" parent="Theme.SplashScreen">
        <item name="postSplashScreenTheme">@style/Theme.OneToNineGame</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_splash_screen</item>
        <item name="windowSplashScreenBackground">@color/primary</item>
    </style>

    <style name="BaseGoldTextColor">
        <item name="android:textColor">@color/gold</item>
    </style>

    <style name="TextViewRuleContentNavigation" parent="BaseGoldTextColor">
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextViewSubtitle" parent="BaseGoldTextColor">
        <item name="android:textSize">22dp</item>
    </style>

    <style name="TextViewSubtitleBold" parent="TextViewSubtitle">
        <item name="android:textSize">22dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextViewNumber" parent="BaseGoldTextColor">
        <item name="android:textSize">24dp</item>
    </style>

    <style name="TextViewTitle" parent="BaseGoldTextColor">
        <item name="android:textSize">32dp</item>
    </style>

    <style name="TextViewNumberInInfo" parent="BaseGoldTextColor">
        <item name="android:textSize">38dp</item>
        <item name="android:background">@drawable/rectangle_border_2dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextViewDescription" parent="BaseGoldTextColor">
        <item name="android:textSize">20dp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="ButtonMenu">
        <item name="android:background">@drawable/rectangle_rounded_filled_gold</item>
        <item name="android:letterSpacing">0.15</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AlertDialogStyle" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <item name="android:background">@color/primary</item>
        <item name="android:textColor">@color/gold</item>
    </style>

    <style name="TabLayout" parent="Widget.Design.TabLayout">
        <item name="tabBackground">@drawable/selector_tab</item>
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabGravity">center</item>
    </style>
</resources>